<div class="forgot-password-container">
  <div class="forgot-password-card">
    <div class="card-header">
      <h2 class="card-title">Forgot Your Password?</h2>
      <p class="card-subtitle">No worries! Enter your email and we'll send you reset instructions</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "forgot-password-form" }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    label: "Email Address",
                    required: true,
                    autofocus: true,
                    placeholder: "your.email@example.com",
                    input_html: { autocomplete: "email", class: "form-control-lg" },
                    wrapper_html: { class: "form-group-spacing" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send Reset Instructions", class: "btn btn-primary btn-lg btn-block" %>
      </div>
    <% end %>

    <div class="card-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<style>
  .forgot-password-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 20px;
  }

  .forgot-password-card {
    background: white;
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    max-width: 480px;
    width: 100%;
    overflow: hidden;
  }

  .card-header {
    padding: 40px 40px 20px;
    text-align: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .card-title {
    margin: 0 0 8px;
    font-size: 28px;
    font-weight: 700;
  }

  .card-subtitle {
    margin: 0;
    opacity: 0.9;
    font-size: 14px;
    line-height: 1.5;
  }

  .forgot-password-form {
    padding: 40px;
  }

  .form-group-spacing {
    margin-bottom: 24px;
  }

  .forgot-password-form .form-control-lg {
    padding: 12px 16px;
    font-size: 16px;
    border-radius: 8px;
    border: 2px solid #e2e8f0;
    transition: all 0.3s ease;
  }

  .forgot-password-form .form-control-lg:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    outline: none;
  }

  .forgot-password-form label {
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 8px;
    font-size: 14px;
  }

  .forgot-password-form .form-control-lg::placeholder {
    color: #a0aec0;
  }

  .form-actions {
    margin-top: 32px;
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    padding: 14px 24px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 8px;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    width: 100%;
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
  }

  .btn-primary:active {
    transform: translateY(0);
  }

  .card-footer {
    padding: 20px 40px 40px;
    text-align: center;
    background: #f7fafc;
    border-top: 1px solid #e2e8f0;
  }

  .card-footer a {
    color: #667eea;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: color 0.2s ease;
    display: inline-block;
    margin: 0 8px;
  }

  .card-footer a:hover {
    color: #764ba2;
    text-decoration: underline;
  }

  .error_notification {
    background: #fed7d7;
    border-left: 4px solid #f56565;
    padding: 12px 16px;
    border-radius: 8px;
    margin-bottom: 24px;
    color: #742a2a;
    font-size: 14px;
  }

  @media (max-width: 576px) {
    .forgot-password-card {
      border-radius: 0;
    }

    .card-header,
    .forgot-password-form,
    .card-footer {
      padding-left: 24px;
      padding-right: 24px;
    }

    .card-title {
      font-size: 24px;
    }

    .card-subtitle {
      font-size: 13px;
    }
  }
</style>
