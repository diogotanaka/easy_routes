<div class="password-reset-container">
  <div class="password-reset-card">
    <div class="card-header">
      <h2 class="card-title">Change Your Password</h2>
      <p class="card-subtitle">Enter your new password below</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "password-form" }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, as: :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password,
                    label: "New Password",
                    required: true,
                    autofocus: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "form-control-lg" },
                    wrapper_html: { class: "form-group-spacing" } %>

        <%= f.input :password_confirmation,
                    label: "Confirm New Password",
                    required: true,
                    input_html: { autocomplete: "new-password", class: "form-control-lg" },
                    wrapper_html: { class: "form-group-spacing" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Change My Password", class: "btn btn-primary btn-lg btn-block" %>
      </div>
    <% end %>

    <div class="card-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<style>
  .password-reset-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 20px;
  }

  .password-reset-card {
    background: white;
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    max-width: 480px;
    width: 100%;
    overflow: hidden;
  }

  .card-header {
    padding: 40px 40px 20px;
    text-align: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .card-title {
    margin: 0 0 8px;
    font-size: 28px;
    font-weight: 700;
  }

  .card-subtitle {
    margin: 0;
    opacity: 0.9;
    font-size: 14px;
  }

  .password-form {
    padding: 40px;
  }

  .form-group-spacing {
    margin-bottom: 24px;
  }

  .password-form .form-control-lg {
    padding: 12px 16px;
    font-size: 16px;
    border-radius: 8px;
    border: 2px solid #e2e8f0;
    transition: all 0.3s ease;
  }

  .password-form .form-control-lg:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    outline: none;
  }

  .password-form label {
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 8px;
    font-size: 14px;
  }

  .password-form .hint {
    font-size: 13px;
    color: #718096;
    margin-top: 6px;
  }

  .form-actions {
    margin-top: 32px;
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    padding: 14px 24px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 8px;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    width: 100%;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
  }

  .btn-primary:active {
    transform: translateY(0);
  }

  .card-footer {
    padding: 20px 40px 40px;
    text-align: center;
    background: #f7fafc;
    border-top: 1px solid #e2e8f0;
  }

  .card-footer a {
    color: #667eea;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .card-footer a:hover {
    color: #764ba2;
    text-decoration: underline;
  }

  .error_notification {
    background: #fed7d7;
    border-left: 4px solid #f56565;
    padding: 12px 16px;
    border-radius: 8px;
    margin-bottom: 24px;
    color: #742a2a;
  }

  @media (max-width: 576px) {
    .password-reset-card {
      border-radius: 0;
    }

    .card-header,
    .password-form,
    .card-footer {
      padding-left: 24px;
      padding-right: 24px;
    }
  }
</style>
