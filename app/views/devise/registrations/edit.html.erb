<div class="edit-profile-container">
  <div class="edit-profile-card">
    <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password,
                    hint: "leave it blank if you don't want to change it",
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: false,
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :current_password,
                    hint: "we need your current password to confirm your changes",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update" %>
      </div>
    <% end %>

    <div class="account-actions">
      <h3>Cancel my account</h3>
      <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>
      <%= link_to "Back", :back %>
    </div>
  </div>
</div>

<style>
  .edit-profile-container {
    max-width: 600px;
    margin: 60px auto;
    padding: 20px;
  }

  .edit-profile-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 40px;
  }

  .edit-profile-card h2 {
    margin: 0 0 30px;
    font-size: 32px;
    font-weight: 700;
    color: #1a202c;
    text-align: center;
  }

  .edit-profile-card .form-inputs {
    margin-bottom: 30px;
  }

  .edit-profile-card .form-inputs p {
    background: #e6fffa;
    border-left: 4px solid #38b2ac;
    padding: 12px 16px;
    border-radius: 6px;
    margin: 15px 0;
    color: #234e52;
    font-size: 14px;
  }

  .edit-profile-card input[type="email"],
  .edit-profile-card input[type="password"] {
    width: 100%;
    padding: 12px 16px;
    font-size: 16px;
    border: 2px solid #e2e8f0;
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .edit-profile-card input[type="email"]:focus,
  .edit-profile-card input[type="password"]:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    outline: none;
  }

  .edit-profile-card label {
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 8px;
    display: block;
    font-size: 14px;
  }

  .edit-profile-card .hint {
    font-size: 13px;
    color: #718096;
    margin-top: 6px;
    font-style: italic;
  }

  .edit-profile-card .form-group {
    margin-bottom: 24px;
  }

  .edit-profile-card .form-actions input[type="submit"] {
    width: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    padding: 14px 24px;
    font-size: 16px;
    font-weight: 600;
    border-radius: 8px;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .edit-profile-card .form-actions input[type="submit"]:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
  }

  .edit-profile-card .form-actions input[type="submit"]:active {
    transform: translateY(0);
  }

  .account-actions {
    margin-top: 40px;
    padding-top: 30px;
    border-top: 2px solid #e2e8f0;
  }

  .account-actions h3 {
    margin: 0 0 15px;
    font-size: 20px;
    font-weight: 700;
    color: #c53030;
  }

  .account-actions div {
    margin-bottom: 20px;
    color: #4a5568;
  }

  .account-actions input[type="submit"] {
    background: linear-gradient(135deg, #f56565 0%, #c53030 100%);
    color: white;
    border: none;
    padding: 12px 24px;
    font-size: 14px;
    font-weight: 600;
    border-radius: 8px;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    margin-left: 8px;
  }

  .account-actions input[type="submit"]:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(245, 101, 101, 0.4);
  }

  .account-actions input[type="submit"]:active {
    transform: translateY(0);
  }

  .account-actions a {
    display: inline-block;
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    padding: 12px 24px;
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .account-actions a:hover {
    background: #f7fafc;
    color: #764ba2;
  }

  .error_notification {
    background: #fed7d7;
    border-left: 4px solid #f56565;
    padding: 12px 16px;
    border-radius: 8px;
    margin-bottom: 24px;
    color: #742a2a;
    font-size: 14px;
  }

  @media (max-width: 768px) {
    .edit-profile-container {
      margin: 20px auto;
      padding: 10px;
    }

    .edit-profile-card {
      padding: 24px;
    }

    .edit-profile-card h2 {
      font-size: 24px;
    }
  }
</style>
