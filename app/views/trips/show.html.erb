<h1><%= @trip.origin %> â†’ <%= @trip.destination %></h1>
<p>Data: <%= @trip.start_date %></p>

<h2>Chat</h2>

<div class="messages">
  <% @trip.messages.each do |msg| %>
    <div class="<%= msg.role %>">
      <strong><%= msg.role %>:</strong> <%= msg.content %>
    </div>
  <% end %>
</div>

<%= form_with url: trip_messages_path(@trip), method: :post do |f| %>
  <%= f.text_area :content, placeholder: "Digite sua pergunta..." %>
  <%= f.submit "Enviar" %>
<% end %>

<%= link_to "Voltar", trips_path %>
